{
     "languageserver": {
         "ccls": {
             "command": "ccls",
             "filetypes": ["c", "cpp", "cuda"],
             "rootPatterns": [".git/", "build/", ".ccls-root"],
             "initializationOptions": {
                 "compilationDatabaseDirectory": "build",
                 "cache": {
                     "directory": "/tmp/ccls"
                 },
                 "index": {
                     "onChange": true
                 },
                 "highlight": {
                     "lsRanges": true
                 }
             }
        },
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": ["cmake"],
            "rootPatterns": [".git/", "build/"],
            "initializationOptions": {
                "buildDirectory": "build"
            }
        }
    }
}
